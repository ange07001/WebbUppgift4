---
import Layout from '../layouts/Layout.astro';

const API_KEY = import.meta.env.PUBLIC_OPENWEATHER_API_KEY;

const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=Birmingham&units=metric&appid=${API_KEY}`);
const weatherData = await response.json();
---

<Layout title='Home'>
    <div class="weather-container">
        <h2>Current Weather in {weatherData.name} is {weatherData.weather[0].main} and the temperature is {weatherData.main.temp} degrees celsius</h2>
        <img src={`http://openweathermap.org/img/wn/${weatherData.weather[0].icon}@2x.png`} alt="Weather icon">
        
        <div class="json-debug">
            <h3>Complete Weather Data:</h3>
            <pre>{JSON.stringify(weatherData, null, 2)}</pre>
        </div>
    </div>
</Layout>

<style>
    .json-debug {
        margin-top: 2rem;
        background-color: #f5f5f5;
        padding: 1rem;
        border-radius: 4px;
        overflow: auto;
    }
    pre {
        white-space: pre-wrap;
        font-family: monospace;
    }
</style>
