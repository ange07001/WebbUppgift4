---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact">
    <h1 class="title has-text-centered is-1 py-4 has-text-primary">Contact Atmos</h1>
    <div class="container">
        <p class="px-5">Have questions about our weather forecasting services? Need technical support or want to partner with us? We'd love to hear from you! Fill out the form below and our team will get back to you within 24 hours.</p>
        <div class="section">
            <form  action="https://formsubmit.co/youremail@email.com" method="POST">
                <div class="field">
                    <label class="label required">Name</label>
                    <div class="control has-icons-left">
                        <input type="text" name="name" class="input" placeholder="Anders Andersson" required>
                        <span class="icon is-small is-left">
                            <i class="material-icons">person</i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label required">Email</label>
                    <div class="control has-icons-left">
                        <input type="email" name="email" class="input" placeholder="anders.andersson@atmos.com" required>
                        <span class="icon is-small is-left">
                            <i class="material-icons">email</i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Phone Number</label>
                    <div class="control has-icons-left">
                        <input type="tel" name="phone" class="input" placeholder="+46 123 456 789">
                        <span class="icon is-small is-left">
                            <i class="material-icons">phone</i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label required">Subject</label>
                    <div class="control">
                        <div class="select is-fullwidth">
                            <select name="subject" required>
                                <option value="">Select a topic</option>
                                <option value="general">General Inquiry</option>
                                <option value="technical">Technical Support</option>
                                <option value="partnership">Partnership Opportunity</option>
                                <option value="feedback">Feedback</option>
                                <option value="bug">Report a Bug</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="field">
                    <label class="label required">Message</label>
                    <div class="control">
                        <textarea name="message" class="textarea" placeholder="Tell us about your inquiry..." rows="5" required></textarea>
                    </div>
                </div>
                <div class="field">
                    <div class="control has-text-centered">
                        <label class="checkbox">
                            <input type="checkbox" name="newsletter">
                            Subscribe to our weather updates newsletter
                        </label>
                    </div>
                </div>
                <div class="field">
                    <div class="control has-text-centered">
                        <label class="checkbox">
                            <input type="checkbox" name="terms_agreement" required />
                            I agree to the <a href="">terms & conditions</a>.
                        </label>
                    </div>
                </div>
                <div class="field has-text-centered mt-6">
                    <div class="control">
                        <button type="submit" class="button is-primary is-medium">Send Message</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</Layout>

<style>
    .label.required::after {
        content: " *";
        color: red;
    }
</style>
